{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build (Debug)",
			"type": "shell",
			"command": "cmake",
			"args": ["--build", "--preset", "Debug"],
			"problemMatcher": ["$gcc"],
			"group": "build"
		},
		{
			"label": "Flash (Debug)",
			"type": "shell",
			"command": "openocd.exe",
			"args": ["-f", "interface/stlink.cfg", "-f", "target/stm32f1x.cfg", "-f", "openocd_flash.cfg"],
			"dependsOn": ["Build (Debug)"],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"PATH": "E:/Work/ENV/xpack-openocd-0.12.0-7-win32-x64/xpack-openocd-0.12.0-7/bin;${env:PATH}"
				}
			}
		}
		,
		{
			"label": "Clean (Debug)",
			"type": "shell",
			"command": "cmake",
			"args": ["--build", "--preset", "Debug", "--target", "clean"],
			"problemMatcher": []
		}
	]
}